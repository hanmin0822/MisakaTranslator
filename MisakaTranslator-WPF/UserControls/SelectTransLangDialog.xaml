<UserControl x:Class="MisakaTranslator_WPF.UserControls.SelectTransLangDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MisakaTranslator_WPF.UserControls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{DynamicResource RegionBrush}" Padding="24">
        <StackPanel>
            <hc:ComboBox Name="SrcLangCombox" Width="380" hc:InfoElement.TitleWidth="140" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="{StaticResource ChooseLanguagePage_srcLang}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <hc:ComboBox Margin="0,20,0,0" Name="DstLangCombox" Width="380" hc:InfoElement.TitleWidth="140" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="{StaticResource ChooseLanguagePage_dstLang}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button Margin="0,20,0,0" Height="30" Click="Button_Click" Command="hc:ControlCommands.Close" Style="{StaticResource ButtonSuccess}" Content="{StaticResource ChooseLanguagePage_BtnConfirm}"/>
        </StackPanel>
    </Border>
</UserControl>
